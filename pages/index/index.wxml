<!--index.wxml-->
<view class="container">
<view style='background-color:rgb(245,245,245);padding:1em'>
  <input placeholder="Search..." bindinput="doSearch" confirm-type="search" style='background-color:white;border-radius:20px;padding:5px 10px 5px 20px;font-size:1emf;color:grey' placeholder-style='color:lightgrey'/>
  </view>
    <text class='h1'>OUR BRANDS</text>
  <scroll-view scroll-x="true" style="width: 100%;height:200px">
    <view style='min-width:1600px;height:100px;background:#2ecc71'>
      <view bindtap='showBrand' class="tile" wx:for="{{brands}}" style='background-image:url({{item.image}})' data-id="{{item.objectId}}"/>
    </view>
  </scroll-view>
    <text class='h1'>TOP PRODUCTS</text>
  <scroll-view scroll-x="true" style="width: 100%;height:260px">
    <view style='min-width:1600px;height:100px;'>
      <view bindtap='showProduct' data-id="{{item.objectId}}" class="tile tile-with-text" wx:for="{{products}}" style='background-image:url({{item.image}})'>
        <view class='tile-text-description'>
          <text>{{item.name}}</text>
          <text>å…ƒ {{item.price}}</text>
          <image src='https://camo.githubusercontent.com/c991598c63d78899b30db5b726153f6fce7c5cd6/687474703a2f2f692e696d6775722e636f6d2f397553674c6f552e706e67' style='width:80px;height:20px'></image>
        </view>
      </view>
    </view>
  </scroll-view>
    <text class='h1'>STORES WORLDWISE</text>
  <scroll-view scroll-y="true" style="width: 100%;height:500px;">
      <view bindtap='showLocation' class="tile tile-banner" wx:for="{{cities}}" style='background-image:url({{item.url}})'>
        <text>{{item.name}}</text>
      </view>
  </scroll-view>
</view>